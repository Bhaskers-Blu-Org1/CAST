{
    "index_patterns": ["cast-log-mellanox-event*"],
    "order" : 1,
    "settings" :{
        "index" : { 
            "number_of_shards"   : 5,
            "number_of_replicas" : 1
        }
    },
    "aliases" : {
        "cast-log-mellanox-event" : {}
    },
    "mappings": {
        "_doc" : {
            "properties" :
            {
                "hostname"     : { "type" : "text" },
                "program_name" : { "type" : "text" },
                "process_id"   : { "type" : "text" },
                "facility"     : { "type" : "text" },
                "severity"     : { "type" : "text" },
                "message"      : { "type" : "text" },
                "log_counter"  : { "type" : "long" },
                "event_id"     : { "type" : "long" },
                "event_type"   : { "type" : "text" },
                "category"     : { "type" : "text" }
            }
        }
    }
}
