{
    "index_patterns": ["log-syslog*"],
    "order" : 1,
    "settings" :{
        "index" : { 
            "number_of_shards"   : 5,
            "number_of_replicas" : 1
        }
    },
    "aliases" : {
        "log-syslog" : {}
    },
    "mappings": {
        "doc" : {
            "properties" : {
                "host"         : { "type" : "text" },
                "hostname"     : { "type" : "text" },
                "program_name" : { "type" : "text" },
                "process_id"   : { "type" : "long" },
                "facility"     : { "type" : "text" },
                "severity"     : { "type" : "text" },
                "message"      : { "type" : "text" }
            }
        }
    }
}
